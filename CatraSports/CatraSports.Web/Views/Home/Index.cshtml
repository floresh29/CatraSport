                            <div class="card">
                                <div class="img-20x mlr-auto pos-relative">
                                    <h6 class="ribbon-cont color-white"><div class="ribbon primary"></div></h6>
                                    <img src="@(ViewBag.adminwebsiteUrl + producto.UrlImagen)" alt="" style="width:220px; height:auto;">
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@producto.Descripcion</h5>
