<section class="top-collection">
    <div class="container">
        <h1 class="title text-center mt-4 mb-4" style="color:white;">LO MEJOR DE CATRA SPORTS</h1>
        <div class="row mb-3">
            @foreach (var producto in Model
                .Where(r => r.Categoria.Descripcion == "Ciclismo")
                .Take(4)
                .OrderBy(r => Guid.NewGuid())
                )
            {
                <div class="col-md-3">
                    <div class="text-center mb-30">
